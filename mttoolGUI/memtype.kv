#:kivy 1.9.1
<CredentialGui@BoxLayout>:
    orientation: 'horizontal'
    Label:
        text: '1'
        size_hint_x: None
        width: 30
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: 30
        Button:
            text: '^'
        Button:
            text: 'v'
    Label:
        text: 'Credential'
    Button:
        size_hint_x: None
        width: 50
        text: 'D'


<CredentialEdit@BoxLayout>:
    orientation: 'vertical'
    Label:
        text: 'Credential Name:'

    TextInput:
        hint_text: 'Credential Name'
        multiline: False
    Label:
        text: 'hop'
    TextInput:
        hint_text: '\\t'
        multiline: False
    Label:
        text: 'Password'
    TextInput:
        hint_text: 'password'
        multiline: False
        password: True
    Label:
        text: 'Submit'
    TextInput:
        hint_text: '\\n'
        multiline: False

    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Cancel'
        Button:
            text: 'Save'


<MainWindow>:
    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        width: root.width
        height: root.height

        Button:
            size: self.width,100
            size_hint: 1,None
            text: 'MemType Tool'

        BoxLayout:
            id: center_layout
            orientation: 'horizontal'
            width: self.width
            height: self.height

            BoxLayout:
                id: left_layout
                background_color: 'white'
                orientation: 'vertical'
                size: 200, self.height
                size_hint: None,1

                Label:
                    text: 'Menu'
                Button:
                    text: 'Read'
                Button:
                    text: 'Write'
                Button:
                    text: 'Set PIN'
                Button:
                    text: 'Import File'
                Button:
                    text: 'Export File'

            BoxLayout:
                
                orientation: 'vertical'

               # CredentialGui:
               # CredentialGui:
               # CredentialGui:
               # CredentialGui:
               # CredentialGui:
               # CredentialGui:
                CredentialEdit:

        Label:
            size: self.width,50
            size_hint: 1,None

            text: 'Footer'
